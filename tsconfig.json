{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "dist",
    "jsx": "preserve",
    "paths": {
      "@alt/*": [
        "./*"
      ]
    },
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types/",
      "**/types/**/*.d.ts"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "**/dist",
    "**/lib"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
